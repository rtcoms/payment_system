<h4>Authorize Transaction</h4>
<%= form_for @form, url: transactions_path, class: 'needs-validation' do |f| %>
  <div class="mb-3">
    <%= f.label :merchant_id, class: 'form-label' %>
    <%= f.collection_select(:merchant_id, @merchants, :first, :last, { prompt: 'Select Merchant' }, class: 'form-select') %>
  </div>

  <div class="mb-3">
    <%= f.label :customer_email, class: 'form-label' %>
    <%= f.email_field :customer_email, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :customer_phone, class: 'form-label' %>
    <%= f.text_field :customer_phone, class: 'form-control' %>
  </div>

  <!-- Nested attributes for payment -->
  <div class="mb-3">
    <%= f.fields_for :payment do |payment_fields| %>
      <div class="mb-3">
        <%= payment_fields.label :amount, class: 'form-label' %>
        <%= payment_fields.number_field :amount, class: 'form-control', required: true %>
      </div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.submit 'Create', class: 'btn btn-primary' %>
  </div>
<% end %>
